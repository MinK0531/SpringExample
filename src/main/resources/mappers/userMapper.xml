<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mink.springexamlpe.mvc.repository.UserRepository">
    <select id="selectLastUser"
    resultType="com.mink.springexamlpe.mvc.domain.User">
        SELECT
            `id`
            ,`name`
            ,`yyyymmdd`
            ,`email`
            ,`introduce`
            ,`created_at`
            ,`updated_at`
        FROM
            `new_user`
        ORDER BY
            `id` DESC
        LIMIT 1
    </select>

    <select id="countUserByEmail"
            parameterType="string" resultType="int">
        SELECT
            COUNT(*)
        FROM
            `new_user`
        WHERE
            `email` = #{email}
    </select>

    <insert id="insertUser" parameterType="map">
        INSERT INTO
            `new_user`
        (
              `name`
            ,`yyyymmdd`
            ,`email`
            ,`introduce`
        )
        VALUES
        (

            #{name}
            , #{birthday}
            , #{email}
            , #{introduce}

        )
    </insert>

    <insert id="insertUserByObject" parameterType="com.mink.springexamlpe.mvc.domain.User"
    useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
            `new_user`
        (
              `name`
            ,`yyyymmdd`
            ,`email`
            ,`introduce`
        )
        VALUES
            (
                #{name}
                ,#{yyyymmdd}
                ,#{email}
                ,#{introduce}
            )
    </insert>

</mapper>